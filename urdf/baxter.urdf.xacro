<?xml version="1.0" ?>
<robot name="baxter" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:arg name="gazebo" default="false"/>
  <xacro:arg name="pedestal" default="true"/>
  <xacro:arg name="gripper_enabled" default="true"/>

  <!-- Baxter Base URDF -->
  <xacro:include filename="$(find baxter_ros2_simulation)/urdf/baxter_base/baxter_base.urdf.xacro"/>

  <!-- Baxter Pedestal -->
  <xacro:if value="$(arg pedestal)">
    <xacro:include filename="$(find baxter_ros2_simulation)/urdf/pedestal/pedestal.xacro"/>
  </xacro:if>

  <!-- Left End Effector -->
  <xacro:include filename="$(find baxter_ros2_simulation)/urdf/left_end_effector.urdf.xacro" />

  <!-- Right End Effector -->
  <xacro:include filename="$(find baxter_ros2_simulation)/urdf/right_end_effector.urdf.xacro" />

</robot>
